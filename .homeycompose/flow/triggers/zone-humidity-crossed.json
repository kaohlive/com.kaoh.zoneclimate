{
  "id": "zone-humidity-crossed",
  "title": {
    "en": "Zone humidity crossed threshold"
  },
  "titleFormatted": {
    "en": "[[zone]] humidity [[direction]] [[threshold]]% (nested: [[includeChild]])"
  },
  "hint": {
    "en": "Triggers once when the average humidity crosses above or below a threshold."
  },
  "args": [
    {
      "type": "autocomplete",
      "name": "zone",
      "title": {
        "en": "Zone"
      },
      "placeholder": {
        "en": "Select a zone..."
      }
    },
    {
      "type": "dropdown",
      "name": "direction",
      "title": {
        "en": "Direction"
      },
      "values": [
        { "id": "above", "title": { "en": "Rises above" } },
        { "id": "below", "title": { "en": "Drops below" } }
      ]
    },
    {
      "type": "number",
      "name": "threshold",
      "title": {
        "en": "Threshold (%)"
      },
      "placeholder": {
        "en": "60"
      },
      "min": 0,
      "max": 100,
      "step": 1
    },
    {
      "type": "checkbox",
      "name": "includeChild",
      "title": {
        "en": "Include nested zones"
      }
    }
  ],
  "tokens": [
    {
      "name": "humidity",
      "type": "number",
      "title": {
        "en": "Humidity"
      },
      "example": 55
    },
    {
      "name": "zone_name",
      "type": "string",
      "title": {
        "en": "Zone name"
      },
      "example": "Living room"
    }
  ]
}
